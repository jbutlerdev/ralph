{
  "name": "ralph",
  "version": "1.0.0",
  "description": "A server-based AI development orchestrator powered by the Ralph Wiggum technique",
  "type": "module",
  "main": "./dist/executor.js",
  "bin": {
    "ralph": "./dist/cli.js",
    "ralph-executor": "./dist/cli.js",
    "ralph-mcp": "./dist/mcp-cli.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "start": "node dist/cli.js",
    "server": "node dist/server.js",
    "dev": "node --loader ts-node/esm src/cli.ts",
    "dev:server": "node --loader ts-node/esm src/server.ts",
    "ralph-executor:build": "cd .claude/skills/ralph-executor && npm run build",
    "test:mcp": "node --loader ts-node/esm tools/test-mcp-server.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "ralph",
    "autonomous",
    "ai",
    "claude",
    "implementation",
    "development",
    "orchestrator"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.1",
    "commander": "^12.0.0",
    "cors": "^2.8.5",
    "execa": "^9.5.2",
    "express": "^5.2.1",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^20.19.30",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist",
    "README.md",
    "CLAUDE.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
